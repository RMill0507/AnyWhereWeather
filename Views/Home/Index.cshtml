@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to AnyWhereWeather</h1>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRfnS75QwwkgQCc01HRB3SQOQDrAbqCW4D_3g&usqp=CAU" alt="AnyWhereWeather Image" />
    <form class="mt-3 d-flex justify-content-center" action="Weather/GetWeather" method="post">
        <div class="form-group">
            <label class="control-label">Enter City Zipcode:</label>
            <div class="input-group">
                <input type="text" name="zip" placeholder="Enter Zipcode" />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </span>
            </div>
        </div>
    </form>
</div>
